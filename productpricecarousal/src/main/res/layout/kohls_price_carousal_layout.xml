<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kohsl_carousal_wrapper"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="#282727"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingEnd="8dp"
    android:paddingStart="8dp">

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:minWidth="450dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sub_product_type_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:maxWidth="400dp"
            android:text="Product Type"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/sub_product_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="3"
            android:maxWidth="400dp"
            android:text="This area show the product description and some long long text."
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/goto_pdp_ib"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:background="@drawable/pdplink" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/carousal_left_button"
        android:layout_width="50dp"
        android:layout_height="90dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/left_arrow"
        android:padding="16dp" />

    <FrameLayout
        android:id="@+id/carousal_wrapper_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="400dp">

        <com.yarolegovich.discretescrollview.DiscreteScrollView
            android:id="@+id/item_picker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shadowleft" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shadowright" />

    </FrameLayout>

    <ImageButton
        android:id="@+id/carousal_right_button"
        android:layout_width="50dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/right_arrow"
        android:padding="16dp" />

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp"
        android:gravity="center"
        android:minWidth="450dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sub_sale_price_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:maxWidth="400dp"
            android:text="SALE"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/sub_sale_price_amount_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:maxWidth="400dp"
            android:text="Sale Price $999.99"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/sub_regular_price_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:maxWidth="400dp"
            android:text="Regular $999.99"
            android:textColor="@color/white"
            android:textSize="30sp" />

    </LinearLayout>
</LinearLayout>